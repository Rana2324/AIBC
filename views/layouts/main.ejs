  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  
  <!-- Stylesheets -->
  <link rel="stylesheet" href="/css/styles.css">
  
  <!-- Socket.IO -->
  <script src="/socket.io/socket.io.js"></script>
  
